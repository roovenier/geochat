@import '../breakpoints'

.profile
	margin-bottom 30px
	padding 0 20px
	display flex

	@media (max-width: $sm-screen)
		padding 0 15px
		flex-direction column
		align-items center
		text-align center

.profileDialog
	composes profile

	@media (max-width: $md-screen)
		display none

.avatar
	margin-right 30px
	width 100px
	height 100px
	border-radius 8px

	@media (max-width: $sm-screen)
		margin 0 0 20px

.data
	display flex
	flex-direction column
	justify-content center

.hello
	margin 0 0 5px
	font-size 18px

	@media (max-width: $sm-screen)
		margin-bottom 10px

.name
	padding 0 2px
	background-color #000

.prop
	margin 3px 0 0
	font-size 14px
	color #8a8a8a

.value
	color #000
